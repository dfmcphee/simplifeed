<div class="hero-unit">
  <h2>All Posts</h2>
  <%- linkTo('Create a new Post', addPostPath, {class: 'btn pull-right'}); %>
</div>

<div id="posts-list">
<% if (posts) { %>
<% for (var i = 0, ii = posts.length; i < ii; i++) { %>
  <div class="row list-item" id="post-<%= posts[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(posts[i].id, postPath(posts[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= posts[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>